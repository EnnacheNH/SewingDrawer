                GridLayout:
                    cols:1
                    Label:
                        size_hint: 1, 0.5
                    GridLayout:
                        cols:1
                        size_hint: 1, 0.5
                        Label:
                            text_size: self.size
                            halign: 'left'
                            valign: 'bottom'
