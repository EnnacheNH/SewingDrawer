                    TextInput:
                        font_size: 0.17 * self.height
                        multiline: True
                        id: notes_var

                GridLayout:
                    cols:1
                    Label:
                        size_hint: 1, 0.5
                    GridLayout:
                        cols:1
                        size_hint: 1, 0.5
                        Label:
                            text_size: self.size
                            halign: 'left'
                            valign: 'bottom'
                            font_size: 0.15 * self.width if 0.15 * self.width < 0.7 * self.height else 0.7 * self.height
                            text: "Supplies"
                    TextInput:
                        font_size: 0.17 * self.height
                        multiline: True
                        id: supplies_var

                GridLayout:
                    cols:1
                    Label:
                        size_hint: 1, 0.5
                    GridLayout:
                        cols:1
                        size_hint: 1, 0.5
                        Label:
                            text_size: self.size
                            halign: 'left'
                            valign: 'bottom'
                            font_size: 0.15 * self.width if 0.15 * self.width < 0.7 * self.height else 0.7 * self.height
                            text: "Measurements"
                    TextInput:
                        font_size: 0.17 * self.height
                        multiline: True
                        id: measurements_var

                GridLayout:
                    cols:1
                    Label:
                        size_hint: 1, 0.5
                    GridLayout:
                        cols:1
                        size_hint: 1, 0.5
                        Label:
                            text_size: self.size
                            halign: 'left'
                            valign: 'bottom'
                            font_size: 0.15 * self.width if 0.15 * self.width < 0.7 * self.height else 0.7 * self.height
                            text: "References"
                    TextInput:
                        font_size: 0.17 * self.height
                        multiline: True
                        id: ref_var

                GridLayout:
                    cols:1
                    Label:
                        size_hint: 1, 0.5
                    GridLayout:
                        cols:1
                        size_hint: 1, 0.5
                        Label:
                            text_size: self.size
                            halign: 'left'
                            valign: 'bottom'
                            font_size: 0.15 * self.width if 0.15 * self.width < 0.7 * self.height else 0.7 * self.height
                            text: "Cost"
                    TextInput:
                        font_size: 0.17 * self.height
                        multiline: True
