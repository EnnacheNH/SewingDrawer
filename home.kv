<WindowManager>:
    canvas.before:
        Color:
            rgba: 55/255, 55/255, 55/255, 1
        Rectangle:
            pos: self.pos
            size: self.size

<Label>:
    font_name: "Pacifico"
    color: 1, 1, 1, 1

<Button>:
    #background_normal: ''
    background_color: 255/255, 255/255, 255/255, 1
    font_name: "Pacifico"
    color: 1, 1, 1, 1
    #font_size: 0.1 * self.width

<TextInput>:
    font_name: "Pacifico"

###################################################################################################################################### Home Window
<HomeWindow>:
    name : "home"

    GridLayout:
        cols: 1
        spacing: 0.02 * self.height

################################################################### Banner
        GridLayout:
            size_hint: 1, 0.1
            cols: 3

            Button:
                size_hint: 0.2, 1
                background_color: (0, 0, 0, 0)

            Label:
                size_hint: 0.6, 1
                font_size: 0.9 * self.height
                text: "Home"

            Button:
                size_hint: 0.2, 1
                background_color: (0, 0, 0, 0)

################################################################### Buttons
        GridLayout:
            cols: 1


            Button:
                font_size: 0.3 * self.height
                text: "Fabrics"

                on_press:
                    app.root.current = "fabric_main"
                    root.manager.transition.direction = "left"
            Button:
                font_size: 0.3 * self.height
                text: "Projects"

                on_press:
                    app.root.current = "project_main"
                    root.manager.transition.direction = "left"
            Button:
                font_size: 0.3 * self.height
                text: "Shopping List"

                on_press:
                    app.root.current = "shopping"
                    root.manager.transition.direction = "left"
            Button:
                font_size: 0.3 * self.height
                text: "Measurements"

                on_press:
                    app.root.current = "measure_main"
                    root.manager.transition.direction = "left"
            Button:
                font_size: 0.3 * self.height
                text: "Settings"

                on_press:
                    app.root.current = "settings"
                    root.manager.transition.direction = "left"

###################################################################################################################################### Fabric Window
<FabricMainWindow>:
    name : "fabric_main"

    GridLayout:
        cols: 1
        spacing: 0.02 * self.height

################################################################### Banner
        GridLayout:
            size_hint: 1, 0.1
            cols: 3

            Button:
                size_hint: 0.2, 1
                background_color: (0, 0, 0, 0)

                on_release:
                    app.root.current = "home"
                    root.manager.transition.direction = "right"

                Image:
                    source: 'LeftArrow.png'
                    pos: self.parent.pos
                    center_x: self.parent.center_x
                    height: self.parent.height if self.parent.height < self.parent.width else self.parent.width

            Label:
                size_hint: 0.6, 1
                font_size: 0.9 * self.height
                text: "Fabrics"

            Button:
                size_hint: 0.2, 1
                background_color: (0, 0, 0, 0)

                on_release:
                    root.sort_popup()

                Image:
                    source: 'MagnifyingGlass.png'
                    pos: self.parent.pos
                    center_x: self.parent.center_x
                    height: self.parent.height if self.parent.height < self.parent.width else self.parent.width

################################################################### Fabric List
        GridLayout:
            cols: 1
            spacing: 0.007 * self.height

            ScrollView:
                id: fabric_scroll_id

                do_scroll_x: False
                do_scroll_y: True
                #effect_cls: 'ScrollEffect'

                GridLayout:
                    id: fabric_list_id

                    size_hint_x: 1
                    size_hint_y: None
                    cols: 1
                    height: self.minimum_height
                    row_default_height: root.height / 6.5
                    row_force_default: True

################################################################### Add Fabric Button
            Button:
                text: "Add Fabric"
                size_hint_y: 0.1
                font_size: 0.5 * self.height

                on_press:
                    root.add()

###################################################################################################################################### Fabric Edit Window
<FabricEditWindow>:
    name : "fabric_edit"

    title_var: title_var
    name_var: name_var
    color_var: color_var
    material_var: material_var
    length_var: length_var
    width_var: width_var
    other_var: other_var

    GridLayout:
        cols: 1
        spacing: 0.02 * self.height
################################################################### Banner
        GridLayout:
            size_hint: 1, 0.1
            cols: 3

            Button:
                size_hint: 0.2, 1
                background_color: (0, 0, 0, 0)

                on_release:
                    app.root.current = "fabric_main"
                    root.manager.transition.direction = "right"

                Image:
                    source: 'LeftArrow.png'
                    pos: self.parent.pos
                    center_x: self.parent.center_x
                    height: self.parent.height if self.parent.height < self.parent.width else self.parent.width

            Label:
                size_hint: 0.6, 1
                id: title_var
                font_size: 0.9 * self.height

            Button:
                size_hint: 0.2, 1
                background_color: (0, 0, 0, 0)

################################################################### Fabric Info
        GridLayout:
            cols: 1

            GridLayout:
                cols: 2

                Label:
                    font_size: 0.4 * self.height
                    text: "Name"
                TextInput:
                    font_size: 0.1 * self.width
                    multiline: False
                    id: name_var

                Label:
                    font_size: 0.4 * self.height
                    text: "Color"
                TextInput:
                    font_size: 0.1 * self.width
                    multiline: False
                    id: color_var

                Label:
                    font_size: 0.4 * self.height
                    text: "Material"
                TextInput:
                    font_size: 0.1 * self.width
                    multiline: False
                    id: material_var

                Label:
                    font_size: 0.4 * self.height
                    text: "Length"
                TextInput:
                    font_size: 0.1 * self.width
                    multiline: False
                    id: length_var

                Label:
                    font_size: 0.4 * self.height
                    text: "Width"
                TextInput:
                    font_size: 0.1 * self.width
                    multiline: False
                    id: width_var

                Label:
                    font_size: 0.4 * self.height
                    text: "Other"
                TextInput:
                    font_size: 0.1 * self.width
                    multiline: False
                    id: other_var

            Button:
                font_size: 0.5 * self.height
                text: "Submit"
                size_hint: 1, 0.1
                on_press: root.submit_fabric()

