                    cols: 1
                    GridLayout:
                        cols: 2
                        Label:
                            font_size: 0.15 * self.width if 0.15 * self.width < 0.4 * self.height else 0.4 * self.height
                            text: "Completed"
                        Button:
                            font_size: 0.15 * self.width if 0.15 * self.width < 0.4 * self.height else 0.4 * self.height
                            id: completed_var
                            on_press:
                                root.completed_button()
                    Button:
                        font_size: 0.5 * self.height
                        text: "Submit"
                        on_press: root.submit_project()

