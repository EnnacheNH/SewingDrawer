            Label:
                size_hint: 1, 0.25
                font_size: 0.45 * self.height if 0.45 * self.height < 0.1 * self.width else 0.1 * self.width
                text: "App made by Ennache"

###################################################################################################################################### PopUp
<FabricSortPopUp>:
    Button:
        text: "Newest"
        font_size: 0.5 * self.height if (0.5 * self.height) < (0.2 * self.width) else 0.2 * self.width
        size_hint: 1, 0.16
        pos_hint: {"x": 0, "y": 0.83}
        on_release:
            root.sort("newest")
            root.parent.parent.parent.dismiss()
    Button:
        text: "Name"
        font_size: 0.5 * self.height if (0.5 * self.height) < (0.2 * self.width) else 0.2 * self.width
        size_hint: 1, 0.16
        pos_hint: {"x": 0, "y": 0.664}
        on_release:
            root.sort("name")
            root.parent.parent.parent.dismiss()
    Button:
        text: "Color"
        font_size: 0.5 * self.height if (0.5 * self.height) < (0.2 * self.width) else 0.2 * self.width
        size_hint: 1, 0.16
        pos_hint: {"x": 0, "y": 0.498}
        on_release:
            root.sort("color")
            root.parent.parent.parent.dismiss()
    Button:
        text: "Material"
